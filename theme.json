{
	"$schema": "https://schemas.wp.org/wp/6.7/theme.json",
	"settings": {
		"appearanceTools": true,
		"layout": {
			"contentSize": "620px",
			"wideSize": "1000px"
		},
		"color": {
			"palette": [
				{
					"name": "Primary",
					"slug": "primary",
					"color": "#0A192F"
				},
				{
					"name": "Secondary",
					"slug": "secondary",
					"color": "#fff"
				},
				{
					"name": "Accent",
					"slug": "accent",
					"color": "#ffcc00"
				},
				{
					"name": "Background",
					"slug": "background",
					"color": "#f5f5f5"
				},
				{
					"name": "Text",
					"slug": "text",
					"color": "#333333"
				},
				{
					"name": "Link",
					"slug": "link",
					"color": "#0073e6"
				},
				{
					"name": "Border",
					"slug": "border",
					"color": "#eaeaea"
				}

			]
		},
		"spacing": {
			"units": [ "%", "px", "em", "rem", "vh", "vw" ],
			"blockGap": true
		},
		"typography": {
			"fontFamilies": [
				{
					"name": "Montserrat",
					"slug": "montserrat",
					"fontFamily": "montserrat, sans-serif",
					"fontFace": [
						{
							"src": [
								"file:./assets/fonts/monstserrat/Montserrat-VariableFont_wght.ttf"
							],
							"fontWeight": "200 800",
							"fontStyle": "normal",
							"fontFamily": "montserrat"
						}
					]
				}
			]
		},
		"useRootPaddingAwareAlignments": true
	},
	"templateParts": [
		{
			"area": "header",
			"name": "header"
		},
		{
			"area": "footer",
			"name": "footer"
		}
	],
	"version": 3,
	"styles": {
		"spacing": {
		  "blockGap": "20px"
		}
	}
}
