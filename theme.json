{
	"$schema": "https://schemas.wp.org/wp/6.7/theme.json",
	"settings": {
		"color": {
			"defaultPalette": false,
			"custom": true,
			"palette": [
				{
                    "name": "Primary",
                    "slug": "primary",
                    "color": "#0a1128"
                },
				{
					"name": "Secondary",
					"slug": "secondary",
					"color": "#D9D9D9"
				},
				{
					"name": "Tertiary",
					"slug": "tertiary",
					"color": "#ffd700"
				}
			]
		},
		"appearanceTools": true,
		"layout": {
			"contentSize": "620px",
			"wideSize": "1000px"
		},
		"spacing": {
			"defaultSpacingSizes": false,
			"spacingSizes": [
				{
					"name": "Tiny",
					"size": "10px",
					"slug": "20"
				},
				{
					"name": "X-Small",
					"size": "20px",
					"slug": "30"
				},
				{
					"name": "Small",
					"size": "30px",
					"slug": "40"
				},
				{
					"name": "Regular",
					"size": "clamp(30px, 5vw, 50px)",
					"slug": "50"
				},
				{
					"name": "Large",
					"size": "clamp(30px, 7vw, 70px)",
					"slug": "60"
				},
				{
					"name": "X-Large",
					"size": "clamp(50px, 7vw, 90px)",
					"slug": "70"
				},
				{
					"name": "XX-Large",
					"size": "300px",
					"slug": "80"
				}
			],
			"units": [
				"%",
				"px",
				"em",
				"rem",
				"vh",
				"vw"
			]
		},
		"typography": {
			"writingMode": true,
			"defaultFontSizes": false,
			"fluid": true,
			"fontFamilies": [
				{
					"name": "Montserrat",
					"slug": "montserrat",
					"fontFamily": "montserrat, sans-serif",
					"fontFace": [
						{
							"src": [
								"file:./assets/fonts/monstserrat/Montserrat-VariableFont_wght.ttf"
							],
							"fontWeight": "200 800",
							"fontStyle": "normal",
							"fontFamily": "montserrat"
						}
					]
				}
			],
			"fontSizes": [
				{
					"fluid": false,
					"name": "Small",
					"size": "1.2rem",
					"slug": "small"
				},
				{
					"fluid": {
						"max": "1.25rem",
						"min": "1rem"
					},
					"name": "Medium",
					"size": "1rem",
					"slug": "medium"
				},
				{
					"fluid": {
						"max": "2.1rem",
						"min": "2rem"
					},
					"name": "Large",
					"size": "2rem",
					"slug": "large"
				},
				{
					"fluid": {
						"max": "2.8rem",
						"min": "2.2rem"
					},
					"name": "Extra Large",
					"size": "2.2rem",
					"slug": "x-large"
				},
				{
					"fluid": {
						"max": "5rem",
						"min": "3rem"
					},
					"name": "Extra Extra Large",
					"size": "3rem",
					"slug": "xx-large"
				}
			]
		},
		"useRootPaddingAwareAlignments": true
	},
	"templateParts": [
		{
			"area": "header",
			"name": "header"
		},
		{
			"area": "footer",
			"name": "footer"
		}
	],
	"version": 3,
	"styles": {
		"spacing": {
		  "blockGap": "0"
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--montserrat)"
		},
		"elements": {
			"h1": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--xx-large)"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)"
				}
			},
			"button": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)"
				}, 
				"border": {
					"radius": "5px",
					"width": "1px",
					"style": "solid",
					"color": "var(--wp--preset--color--primary)"
				},
				"spacing": {
					"padding": {
						"top": "5px",
						"right": "20px",
						"bottom": "5px",
						"left": "20px"
					}
				},
				"color": {
					"text": "var(--wp--preset--color--white)",
					"background": "var(--wp--preset--color--primary)"
				},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--primary)",
						"background": "var(--wp--preset--color--secondary)"
					}
				}
			}
		},
		"blocks": {
			"core/paragraph": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)"
				},
				"spacing": {
					"padding": {
						"top": "var(--wp--preset--spacing--10)",
						"right": "var(--wp--preset--spacing--0)",
						"bottom": "var(--wp--preset--spacing--10)",
						"left": "var(--wp--preset--spacing--0)"
					}
				},
				"border": {
					"radius": "5px"
				}
			},
			"core/group": {
				"spacing": {
					"blockGap": "var(--wp--preset--spacing--20)"
				}
			},
			"core/site-title": {
				"typography": {
					"fontSize": "var:preset|font-size|large"
				}
			}
			
		}
	}
}
